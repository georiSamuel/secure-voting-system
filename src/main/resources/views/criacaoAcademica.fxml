<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="backgroundTela" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #5B50C0;" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistema.votacao.Interface.CriarAcademicaController">
    <children>
        <AnchorPane fx:id="telaBranca" layoutX="200.0" layoutY="36.0" prefHeight="555.0" prefWidth="400.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;" styleClass="painel-principal">
            <children>
                <Text fill="#080808" layoutX="15.0" layoutY="46.0" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="texto-titulo" text="Criar Votação Acadêmica" textAlignment="CENTER" wrappingWidth="371.0">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Text>

                <Label layoutX="30.0" layoutY="70.0" text="Título da Votação:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="tituloCampo" layoutX="30.0" layoutY="95.0" prefWidth="340.0" promptText="Ex: Eleição para Reitor" styleClass="campo-texto" />

                <Label layoutX="30.0" layoutY="140.0" text="Cargo Acadêmico:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cargoComboBox" layoutX="30.0" layoutY="165.0" prefWidth="340.0" promptText="Selecione o cargo" />

                <Label layoutX="30.0" layoutY="210.0" text="Início da Votação:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <DatePicker fx:id="inicioDatePicker" layoutX="30.0" layoutY="235.0" prefWidth="170.0" promptText="Selecione a data" styleClass="date-picker" />
                <TextField fx:id="inicioTimeField" layoutX="200.0" layoutY="235.0" prefWidth="170.0" promptText="HH:MM" styleClass="campo-texto" />

                <Label layoutX="30.0" layoutY="280.0" text="Fim da Votação:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <DatePicker fx:id="fimDatePicker" layoutX="30.0" layoutY="305.0" prefWidth="170.0" promptText="Selecione a data" styleClass="date-picker" />
                <TextField fx:id="fimTimeField" layoutX="200.0" layoutY="305.0" prefWidth="170.0" promptText="HH:MM" styleClass="campo-texto" />

                <Label layoutX="30.0" layoutY="350.0" text="Opções de Voto:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="novaOpcaoCampo" layoutX="30.0" layoutY="375.0" prefWidth="250.0" promptText="Adicione uma opção (ex: Candidato A)" styleClass="campo-texto" />
                <Button layoutX="290.0" layoutY="375.0" mnemonicParsing="false" onAction="#adicionarOpcao" style="-fx-background-color: #6555DB; -fx-text-fill: white;" styleClass="botao-menu-secundario" text="Adicionar" />

                <ListView fx:id="opcoesListView" layoutX="30.0" layoutY="415.0" prefHeight="80.0" prefWidth="340.0" styleClass="list-view" />

                <Label fx:id="mensagemStatusLabel" layoutX="30.0" layoutY="505.0" textFill="#4CAF50">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="mensagemErroLabel" layoutX="30.0" layoutY="530.0" textFill="#F44336">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <Button layoutX="45.0" layoutY="507.0" mnemonicParsing="false" onAction="#criarVotacao" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #6555DB; -fx-text-fill: white;" styleClass="botao-menu-primario" text="Criar Votação" />
                <Button layoutX="210.0" layoutY="507.0" mnemonicParsing="false" onAction="#voltar" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #6555DB; -fx-text-fill: white;" styleClass="botao-menu-cancel" text="Voltar" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
