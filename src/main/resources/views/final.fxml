<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="backgroundTela" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #5B50C0;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistema.votacao.Interface.FinalController">
    <children>
        <AnchorPane fx:id="telaBranca" layoutX="200.0" layoutY="71.0" prefHeight="457.0" prefWidth="400.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;">
            <children>
                <!-- Mensagem principal -->
                <Text fx:id="mensagemSucesso" fill="#080808" layoutX="50.0" layoutY="74.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Seu voto foi registrado com sucesso!" textAlignment="CENTER" wrappingWidth="300.0">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Text>

                <!-- Detalhes do voto -->
                <Text fx:id="detalhesVoto" fill="#4a4a4a" layoutX="50.0" layoutY="159.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Obrigado por escolher o nosso sistema!" textAlignment="CENTER" wrappingWidth="300.0">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Text>

                <!-- Botão para retornar -->
                <Button fx:id="botaoVoltar" layoutX="125.0" layoutY="350.0" mnemonicParsing="false" onAction="#voltar" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #6555DB; -fx-text-fill: white;" text="Voltar ao Início" />
            <ImageView fx:id="imagemConfirmacao" fitHeight="150.0" fitWidth="200.0" layoutX="125.0" layoutY="180.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/confirmado.png" />
               </image>
            </ImageView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
