<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="backgroundTela" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #5B50C0;" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistema.votacao.Interface.CriarAcademicaController">
    <children>
        <AnchorPane fx:id="telaBranca" layoutX="164.0" layoutY="23.0" prefHeight="555.0" prefWidth="549.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;" styleClass="painel-principal">
            <children>
                <Text fill="#080808" layoutX="78.0" layoutY="46.0" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="texto-titulo" text="Criar Votação Acadêmica" textAlignment="CENTER" wrappingWidth="394.0">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Text>

                <Label layoutX="105.0" layoutY="75.0" text="Título da Votação:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="tituloCampo" layoutX="105.0" layoutY="100.0" prefWidth="340.0" promptText="Ex: Eleição para Reitor" styleClass="campo-texto" />

                <Label layoutX="105.0" layoutY="145.0" text="Cargo Acadêmico:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cargoComboBox" layoutX="105.0" layoutY="170.0" prefWidth="340.0" promptText="Selecione o cargo" />

                <Label layoutX="105.0" layoutY="215.0" text="Início da Votação:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <DatePicker fx:id="inicioDatePicker" layoutX="105.0" layoutY="240.0" prefWidth="170.0" promptText="Selecione a data" styleClass="date-picker" />
                <TextField fx:id="inicioTimeField" layoutX="275.0" layoutY="240.0" prefWidth="170.0" promptText="HH:MM" styleClass="campo-texto" />

                <Label layoutX="105.0" layoutY="285.0" text="Fim da Votação:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <DatePicker fx:id="fimDatePicker" layoutX="105.0" layoutY="310.0" prefWidth="170.0" promptText="Selecione a data" styleClass="date-picker" />
                <TextField fx:id="fimTimeField" layoutX="275.0" layoutY="310.0" prefWidth="170.0" promptText="HH:MM" styleClass="campo-texto" />

                <Label layoutX="105.0" layoutY="355.0" text="Opções de Voto:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="novaOpcaoCampo" layoutX="105.0" layoutY="380.0" prefWidth="250.0" promptText="Adicione uma opção (ex: Candidato A)" styleClass="campo-texto" />
                <Button layoutX="365.0" layoutY="380.0" mnemonicParsing="false" onAction="#adicionarOpcao" style="-fx-background-color: #6555DB; -fx-text-fill: white;" styleClass="botao-menu-secundario" text="Adicionar" />

                <ListView fx:id="opcoesListView" layoutX="105.0" layoutY="420.0" prefHeight="80.0" prefWidth="340.0" styleClass="list-view" />

                <Button layoutX="120.0" layoutY="512.0" mnemonicParsing="false" onAction="#criarVotacao" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #6555DB; -fx-text-fill: white;" styleClass="botao-menu-primario" text="Criar Votação" />
                <Button layoutX="295.0" layoutY="512.0" mnemonicParsing="false" onAction="#voltar" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #6555DB; -fx-text-fill: white;" styleClass="botao-menu-cancel" text="Voltar" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
